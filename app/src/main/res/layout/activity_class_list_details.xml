<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="10dp"
    tools:context=".ClassListDetails">

    <TextView

        android:id="@+id/tv_classNameDetails"
        android:textSize="24sp"
        android:textColor="#000"
        android:text="Class Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_latDetails"
            android:textSize="8sp"
            android:textColor="#FFFFFF"
            android:text="latitude Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_longDetails"
            android:textSize="8sp"
            android:textColor="#FFFFFF"
            android:text="latitude Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_statusDetails"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_gotoMapDetails"
        android:text="Go To Maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>